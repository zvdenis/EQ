<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:background="@drawable/element_bg"
    android:elevation="5dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/element_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/code_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintVertical_bias=".1"
            app:layout_constraintHorizontal_bias=".0"
            android:layout_marginHorizontal="40dp"
            android:text="Национальныйи сследовательский"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".8"
            android:layout_marginTop="3dp"
            android:layout_height="1dp"
            android:background="@color/good_green"
            app:layout_constraintHorizontal_bias=".0"
            app:layout_constraintLeft_toLeftOf="@id/code_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code_text"
            />
        <TextView
            android:id="@+id/queue_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias=".0"
            app:layout_constraintHorizontal_bias=".2"
            android:layout_marginTop="10dp"
            android:text="Your Que-No"
            android:textColor="@color/gray_porcelain"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/code_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/queue_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias=".5"
            android:text="140"
            android:textColor="@color/good_green"
            android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@id/queue_number_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/queue_number_text"
            app:layout_constraintEnd_toEndOf="@id/queue_number_text"
            />

        <TextView
            android:id="@+id/est_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias=".0"
            app:layout_constraintHorizontal_bias=".7"
            android:layout_marginTop="10dp"
            android:text="Est. Time Left"
            android:textColor="@color/gray_porcelain"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/code_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/time_left_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintVertical_bias=".0"
            app:layout_constraintHorizontal_bias=".5"
            android:text="140"
            android:textColor="@color/good_green"
            android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@id/est_time_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/est_time_text"
            app:layout_constraintEnd_toEndOf="@id/est_time_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/time_left_number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/time_left_number"
            app:layout_constraintBottom_toBottomOf="@id/time_left_number"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:text="min"
            app:layout_constraintVertical_bias=".8"
            android:layout_marginLeft="10dp"
            app:layout_constraintHorizontal_bias="0"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>